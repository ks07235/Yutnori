        <View android:id="@+id/spot2" android:layout_width="30dp" android:layout_height="30dp" android:background="@drawable/shape_node_small" app:layout_constraintBottom_toTopOf="@+id/spot1" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/spot3" />
        <View android:id="@+id/spot3" android:layout_width="30dp" android:layout_height="30dp" android:background="@drawable/shape_node_small" app:layout_constraintBottom_toTopOf="@+id/spot2" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/spot4" />
        <View android:id="@+id/spot4" android:layout_width="30dp" android:layout_height="30dp" android:background="@drawable/shape_node_small" app:layout_constraintBottom_toTopOf="@+id/spot3" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/spot5" />
        <View android:id="@+id/spot6" android:layout_width="30dp" android:layout_height="30dp" android:background="@drawable/shape_node_small" app:layout_constraintEnd_toStartOf="@+id/spot5" app:layout_constraintStart_toEndOf="@+id/spot7" app:layout_constraintTop_toTopOf="parent" />
        <View android:id="@+id/spot7" android:layout_width="30dp" android:layout_height="30dp" android:background="@drawable/shape_node_small" app:layout_constraintEnd_toStartOf="@+id/spot6" app:layout_constraintStart_toEndOf="@+id/spot8" app:layout_constraintTop_toTopOf="parent" />
        <View android:id="@+id/spot8" android:layout_width="30dp" android:layout_height="30dp" android:background="@drawable/shape_node_small" app:layout_constraintEnd_toStartOf="@+id/spot7" app:layout_constraintStart_toEndOf="@+id/spot9" app:layout_constraintTop_toTopOf="parent" />
        <View android:id="@+id/spot9" android:layout_width="30dp" android:layout_height="30dp" android:background="@drawable/shape_node_small" app:layout_constraintEnd_toStartOf="@+id/spot8" app:layout_constraintStart_toEndOf="@+id/spot10" app:layout_constraintTop_toTopOf="parent" />
        <View android:id="@+id/spot11" android:layout_width="30dp" android:layout_height="30dp" android:background="@drawable/shape_node_small" app:layout_constraintBottom_toTopOf="@+id/spot12" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/spot10" />
        <View android:id="@+id/spot12" android:layout_width="30dp" android:layout_height="30dp" android:background="@drawable/shape_node_small" app:layout_constraintBottom_toTopOf="@+id/spot13" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/spot11" />
        <View android:id="@+id/spot13" android:layout_width="30dp" android:layout_height="30dp" android:background="@drawable/shape_node_small" app:layout_constraintBottom_toTopOf="@+id/spot14" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/spot12" />
        <View android:id="@+id/spot14" android:layout_width="30dp" android:layout_height="30dp" android:background="@drawable/shape_node_small" app:layout_constraintBottom_toTopOf="@+id/spot15" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/spot13" />
        <View android:id="@+id/spot16" android:layout_width="30dp" android:layout_height="30dp" android:background="@drawable/shape_node_small" app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toStartOf="@+id/spot17" app:layout_constraintStart_toEndOf="@+id/spot15" />
        <View android:id="@+id/spot17" android:layout_width="30dp" android:layout_height="30dp" android:background="@drawable/shape_node_small" app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toStartOf="@+id/spot18" app:layout_constraintStart_toEndOf="@+id/spot16" />
        <View android:id="@+id/spot18" android:layout_width="30dp" android:layout_height="30dp" android:background="@drawable/shape_node_small" app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toStartOf="@+id/spot19" app:layout_constraintStart_toEndOf="@+id/spot17" />
        <View android:id="@+id/spot19" android:layout_width="30dp" android:layout_height="30dp" android:background="@drawable/shape_node_small" app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toStartOf="@+id/spot0" app:layout_constraintStart_toEndOf="@+id/spot18" />
        <View android:id="@+id/spot20" android:layout_width="30dp" android:layout_height="30dp" android:background="@drawable/shape_node_small" app:layout_constraintBottom_toTopOf="@+id/spot21" app:layout_constraintEnd_toStartOf="@+id/spot5" app:layout_constraintStart_toEndOf="@+id/spot21" app:layout_constraintTop_toBottomOf="@+id/spot5" />
        <View android:id="@+id/spot21" android:layout_width="30dp" android:layout_height="30dp" android:background="@drawable/shape_node_small" app:layout_constraintBottom_toTopOf="@+id/spot22" app:layout_constraintEnd_toStartOf="@+id/spot20" app:layout_constraintStart_toEndOf="@+id/spot22" app:layout_constraintTop_toBottomOf="@+id/spot20" />
        <View android:id="@+id/spot23" android:layout_width="30dp" android:layout_height="30dp" android:background="@drawable/shape_node_small" app:layout_constraintBottom_toTopOf="@+id/spot24" app:layout_constraintEnd_toStartOf="@+id/spot22" app:layout_constraintStart_toEndOf="@+id/spot24" app:layout_constraintTop_toBottomOf="@+id/spot22" />
