        <View android:id="@+id/spot28" android:layout_width="30dp" android:layout_height="30dp" android:background="@drawable/shape_node_small" app:layout_constraintBottom_toTopOf="@+id/spot0" app:layout_constraintEnd_toStartOf="@+id/spot0" app:layout_constraintStart_toEndOf="@+id/spot27" app:layout_constraintTop_toBottomOf="@+id/spot27" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/waiting_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/board_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp">

        <FrameLayout android:id="@+id/wait_spot_0" android:layout_width="50dp" android:layout_height="50dp" android:layout_margin="5dp"/>
        <FrameLayout android:id="@+id/wait_spot_1" android:layout_width="50dp" android:layout_height="50dp" android:layout_margin="5dp"/>
        <FrameLayout android:id="@+id/wait_spot_2" android:layout_width="50dp" android:layout_height="50dp" android:layout_margin="5dp"/>
        <FrameLayout android:id="@+id/wait_spot_3" android:layout_width="50dp" android:layout_height="50dp" android:layout_margin="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        android:weightSum="6">

        <Button android:id="@+id/btn_bdo" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="빽도"/>
        <Button android:id="@+id/btn_do" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="도"/>
        <Button android:id="@+id/btn_gae" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="개"/>
        <Button android:id="@+id/btn_geol" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="걸"/>
        <Button android:id="@+id/btn_yut" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="윷"/>
        <Button android:id="@+id/btn_mo" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="모"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>