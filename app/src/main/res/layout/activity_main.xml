        <View android:id="@+id/spot26" android:layout_width="30dp" android:layout_height="30dp" android:background="@drawable/shape_node_small" app:layout_constraintBottom_toTopOf="@+id/spot22" app:layout_constraintEnd_toStartOf="@+id/spot22" app:layout_constraintStart_toEndOf="@+id/spot25" app:layout_constraintTop_toBottomOf="@+id/spot25" />
